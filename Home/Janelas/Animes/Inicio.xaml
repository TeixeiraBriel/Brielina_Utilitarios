<Page x:Class="Home.Janelas.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Home.Janelas"
      mc:Ignorable="d" 
      d:DesignHeight="{DynamicResource HeightTotal}" d:DesignWidth="{DynamicResource WidthTotal}"
      Title="Inicio">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" MinWidth="300" MinHeight="300" Height="450" Width="800">
            <TextBlock FontSize="50" FontWeight="Medium" FontFamily="Helvetica" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Animes" VerticalAlignment="Center"/>
            <Button Content="Tabela" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="50" Margin="0,5,0,0" Click="navegaTabelas"/>
            <Button x:Name="btnCadastro" Content="Cadastrar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="50" Margin="0,5,0,0" Click="navegaCadastro"/>
        </StackPanel>

    </Grid>
</Page>

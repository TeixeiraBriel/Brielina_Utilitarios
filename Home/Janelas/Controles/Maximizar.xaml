<UserControl x:Class="BrielinaUtilitarios.Janelas.Controles.Maximizar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:BrielinaUtilitarios.Janelas.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="50">
    <Border CornerRadius="20,0,0,20" Background="#FF673AB7">
        <Button 
                    materialDesign:ButtonAssist.CornerRadius="20,0,0,20"
                    BorderThickness="0"
                    Padding="0"
                    Click="Change"
                    Content="{materialDesign:PackIcon Kind=KeyboardArrowLeft, Size=40}"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" 
                    Height="auto">
        </Button>
    </Border>
</UserControl>
